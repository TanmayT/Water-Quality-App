<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ocean_background">

    <Button
        android:id="@+id/phsensortrigger"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="92dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:onClick="PhSensorCLick"
        android:text="PhSensor"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toTopOf="@+id/electricalconductivtytrigger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/electricalconductivtytrigger"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="92dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="184dp"
        android:gravity="center"
        android:onClick="ElectricalConductivityCLick"
        android:text="ElectricalConductivity"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toTopOf="@+id/dotrigger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.223" />

    <Button
        android:id="@+id/dotrigger"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="92dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="296dp"
        android:gravity="center"
        android:onClick="DissolvedOxygenClick"
        android:text="Dissolved Oxygen"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toTopOf="@+id/temperaturetrigger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/temperaturetrigger"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="92dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="432dp"
        android:gravity="center"
        android:onClick="TemperatureClick"
        android:text="Temperature"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>