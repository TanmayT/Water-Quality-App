<?xml version="1.0" encoding="utf-8"?>


    <android.support.constraint.ConstraintLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/waterdrop"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <EditText
        android:id="@+id/edt_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/aqua"
        android:ems="10"
        android:gravity="center"
        android:text="10.42.0.1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/led_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Led pin is now :"
        android:inputType="textPersonName"
        android:textColorHint="@color/red"
        app:layout_constraintTop_toBottomOf="@+id/edt_ip"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/millis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:hint="Millis :"
        android:inputType="textPersonName"
        android:textColorHint="@color/red"
        app:layout_constraintTop_toBottomOf="@+id/edt_ip"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/sensor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Sensor :"
        android:textColorHint="@color/red"
        app:layout_constraintTop_toBottomOf="@+id/edt_ip"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/fetch"
        android:layout_width="76dp"
        android:layout_height="41dp"
        android:layout_marginLeft="152dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="440dp"
        android:background="@color/green"
        android:onClick="buttonClick"
        android:text="Start!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/graph_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="344dp"
        android:onClick="graphButtonClick"
        android:text="Graph"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cal_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="168dp"
        android:layout_marginRight="168dp"
        android:layout_marginTop="344dp"
        android:onClick="calButtonClick"
        android:text="1PCaliberate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/twopcal_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="344dp"
        android:onClick="twopcalButtonCLick"
        android:text="2PCaliberate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
